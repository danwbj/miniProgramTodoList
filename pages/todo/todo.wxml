<view class="page">
    <!-- 页头 -->
    <view class="page__hd"></view>
    <!-- 主体 -->
    <view class="page__bd">
        <view class="weui-cell">
            <view class="weui-cell__bd">
                <input class="weui-input" placeholder="添加新任务" bindinput="typeNewTask" value="{{newTask}}" style="font-size:32rpx" />
            </view>
            <view class="weui-cell__ft">
                <button class="weui-btn mini-btn" type="primary" size="mini" bindtap="addTask" disabled="{{newTask == ''}}">
                    添加
                </button>
            </view>
        </view>
        <view class="weui-tab">
            <view class="weui-navbar">
                <block wx:for="{{tabs}}" wx:key="*this">
                    <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
                        <view class="weui-navbar__title">{{item}}</view>
                    </view>
                </block>
                <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
            </view>
            <!-- 全部任务 -->
            <view class="weui-tab__panel">
                <view class="weui-tab__content" hidden="{{activeIndex != 0}}">
                    <view class="weui-cells weui-cells_after-title">
                        <checkbox-group>
                            <label class="weui-cell weui-check__label" wx:for="{{tasks}}" wx:key="value" data-value="{{item._id}}" bindtap="checkboxChange">
                                <checkbox class="weui-check" value="{{item._id}}" />
                                <view class="weui-cell__hd weui-check__hd_in-checkbox">
                                    <icon class="weui-icon-checkbox_circle" type="circle" size="23" wx:if="{{!item.status}}"></icon>
                                    <icon class="weui-icon-checkbox_success" type="success" size="23" wx:if="{{item.status}}"></icon>
                                </view>
                                <view class="{{item.status?'weui-cell__bd deleted-line':'weui-cell__bd'}}">
                                    {{item.content}}
                                </view>
                                <view class="weui-cell__ft">
                                    <button class="weui-btn" type="warn" size="mini" data-value="{{item._id}}" catchtap="removeTask">
                                        删除
                                    </button>
                                </view>
                            </label>
                        </checkbox-group>
                    </view>
                </view>
                <!-- 未完成任务 -->
                <view class="weui-tab__content" hidden="{{activeIndex != 1}}">
                    <view class="weui-cells weui-cells_after-title">
                        <checkbox-group>
                            <label class="weui-cell weui-check__label" wx:for="{{tasks}}" wx:key="_id" wx:if="{{!item.status}}" data-value="{{item._id}}" bindtap="checkboxChange">
                                <checkbox class="weui-check" value="{{item._id}}" />
                                <view class="weui-cell__hd weui-check__hd_in-checkbox">
                                    <icon class="weui-icon-checkbox_circle" type="circle" size="23"></icon>
                                </view>
                                <view class="weui-cell__bd">{{item.content}}</view>
                                <view class="weui-cell__ft">
                                    <button class="weui-btn" type="warn" size="mini" data-value="{{item._id}}" catchtap="removeTask">
                                        删除
                                    </button>
                                </view>
                            </label>
                        </checkbox-group>
                    </view>
                </view>
                <!-- 已完成任务 -->
                <view class="weui-tab__content" hidden="{{activeIndex != 2}}">
                    <view class="weui-cells weui-cells_after-title">
                        <checkbox-group>
                            <label class="weui-cell weui-check__label" wx:for="{{tasks}}" wx:key="value" wx:if="{{item.status}}" data-value="{{item._id}}" bindtap="checkboxChange">
                                <checkbox class="weui-check" value="{{item._id}}" />
                                <view class="weui-cell__hd weui-check__hd_in-checkbox">
                                    <icon class="weui-icon-checkbox_success" type="success" size="23"></icon>
                                </view>
                                <view class="weui-cell__bd deleted-line">{{item.content}}</view>
                                <view class="weui-cell__ft">
                                    <button class="weui-btn" type="warn" size="mini" data-value="{{item._id}}" catchtap="removeTask">
                                        删除
                                    </button>
                                </view>
                            </label>
                        </checkbox-group>
                    </view>
                </view>
            </view>
        </view>
